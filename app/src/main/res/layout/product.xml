<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#ffffff"
    >

  <TextView
      android:id="@+id/title_txt"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="100dp"
      android:layout_marginTop="8dp"
      android:ellipsize="end"
      android:inputType="text"
      android:maxLines="1"
      android:text="TextView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="@sample/products.json/products/headline"
      />

  <ImageView
      android:id="@+id/picture_img"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/title_txt"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@mipmap/ic_launcher"
      />
  <TextView
      android:id="@+id/new_price_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="100dp"
      android:text="TextView"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      tools:text="@sample/products.json/products/newBestPrice"
      />
  <TextView
      android:id="@+id/new_price_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="8dp"
      android:text="Neuf"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/new_price_txt"
      />
  <TextView
      android:id="@+id/used_price_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="24dp"
      android:text="TextView"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/new_price_label"
      tools:text="@sample/products.json/products/usedBestPrice"
      />
  <TextView
      android:id="@+id/used_price_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="8dp"
      android:text="Occasion"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/used_price_txt"
      />
  <LinearLayout
      android:id="@+id/score_layout"
      android:layout_width="100dp"
      android:layout_height="25dp"
      android:layout_marginStart="100dp"
      android:layout_marginTop="8dp"
      android:orientation="horizontal"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/title_txt"
      >
    <ImageView
        android:id="@+id/star_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_star_orange_24dp"
        />

    <ImageView
        android:id="@+id/star_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_star_orange_24dp"
        />

    <ImageView
        android:id="@+id/star_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_star_orange_24dp"
        />

    <ImageView
        android:id="@+id/star_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_star_orange_24dp"
        />

    <ImageView
        android:id="@+id/star_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_star_orange_24dp"
        />
  </LinearLayout>
  <TextView
      android:id="@+id/reviews_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="11dp"
      android:text="TextView"
      app:layout_constraintStart_toEndOf="@+id/score_layout"
      app:layout_constraintTop_toBottomOf="@+id/title_txt"
      tools:text="@sample/products.json/products/nbReviews"
      />
  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="11dp"
      android:text="Avis"
      app:layout_constraintStart_toEndOf="@+id/reviews_txt"
      app:layout_constraintTop_toBottomOf="@+id/title_txt"
      />
</android.support.constraint.ConstraintLayout>