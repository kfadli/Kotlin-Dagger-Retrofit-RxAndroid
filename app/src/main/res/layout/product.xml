<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >

  <TextView
      android:id="@+id/title_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:text="TextView"
      app:layout_constraintStart_toEndOf="@+id/picture_img"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginLeft="8dp"
      tools:text="@sample/products.json/products/headline"
      />

  <ImageView
      android:id="@+id/picture_img"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@mipmap/ic_launcher"
      android:layout_marginLeft="8dp"
      />
  <TextView
      android:id="@+id/new_price_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="12dp"
      android:text="TextView"
      app:layout_constraintStart_toEndOf="@+id/picture_img"
      app:layout_constraintTop_toBottomOf="@+id/title_txt"
      tools:text="@sample/products.json/products/newBestPrice"
      />
  <TextView
      android:id="@+id/new_price_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="12dp"
      android:text="Neuf"
      app:layout_constraintStart_toEndOf="@+id/new_price_txt"
      app:layout_constraintTop_toBottomOf="@+id/title_txt"
      />
  <TextView
      android:id="@+id/used_price_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:text="TextView"
      tools:text="@sample/products.json/products/usedBestPrice"
      app:layout_constraintStart_toEndOf="@+id/picture_img"
      app:layout_constraintTop_toBottomOf="@+id/new_price_txt"
      />
  <TextView
      android:id="@+id/used_price_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:text="Occasion"
      app:layout_constraintStart_toEndOf="@+id/used_price_txt"
      app:layout_constraintTop_toBottomOf="@+id/new_price_label"
      />
</android.support.constraint.ConstraintLayout>