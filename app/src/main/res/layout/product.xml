<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#ffffff"
    >

  <TextView
      android:id="@+id/title_txt"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="100dp"
      android:layout_marginTop="8dp"
      android:ellipsize="end"
      android:inputType="text"
      android:maxLines="1"
      android:text="TextView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="@sample/products.json/products/headline"
      android:layout_marginRight="8dp"
      android:layout_marginLeft="100dp"
      />

  <ImageView
      android:id="@+id/picture_img"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/title_txt"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@mipmap/ic_launcher"
      />
  <TextView
      android:id="@+id/new_price_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="100dp"
      android:text="TextView"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      tools:text="@sample/products.json/products/newBestPrice"
      />
  <TextView
      android:id="@+id/new_price_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="8dp"
      android:text="Neuf"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/new_price_txt"
      android:layout_marginLeft="8dp"
      />
  <TextView
      android:id="@+id/used_price_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="24dp"
      android:text="TextView"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/new_price_label"
      tools:text="@sample/products.json/products/usedBestPrice"
      android:layout_marginLeft="24dp"
      />
  <TextView
      android:id="@+id/used_price_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="8dp"
      android:text="Occasion"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/used_price_txt"
      android:layout_marginLeft="8dp"
      />


  <TextView
      android:id="@+id/reviews_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="12dp"
      android:text="TextView"
      app:layout_constraintStart_toEndOf="@+id/score"
      app:layout_constraintTop_toBottomOf="@+id/title_txt"
      tools:text="@sample/products.json/products/nbReviews"
      />
  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="12dp"
      android:layout_marginStart="12dp"
      android:layout_marginTop="12dp"
      android:text="@string/reviews"
      app:layout_constraintStart_toEndOf="@+id/reviews_txt"
      app:layout_constraintTop_toBottomOf="@+id/title_txt"
      />

  <me.zhanghai.android.materialratingbar.MaterialRatingBar
      android:minHeight="20dp"
      android:maxHeight="20dp"
      android:id="@+id/score"
      android:layout_width="111dp"
      android:layout_height="20dp"
      android:layout_marginBottom="8dp"
      android:layout_marginLeft="100dp"
      android:layout_marginStart="100dp"
      android:layout_marginTop="8dp"
      android:numStars="5"
      android:rating="4.5"
      android:stepSize="0.5"
      app:mrb_progressTint="@color/yellow_star"
      app:mrb_fillBackgroundStars="false"
      app:mrb_secondaryProgressTint="@color/grey_star"
      app:layout_constraintBottom_toTopOf="@+id/new_price_label"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/title_txt"
      style="@style/Widget.MaterialRatingBar.RatingBar.Indicator.Small"
      />

</android.support.constraint.ConstraintLayout>